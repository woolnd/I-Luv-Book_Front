<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    tools:context=".AgeSetActivity">

    <ImageView
        android:id="@+id/age_title.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/age_title"
        android:layout_marginTop="77dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/age_script.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택된 나이에따라 교과 과정에 맞는\n동화 생성, 퀴즈, 단어장이 만들어져요"
        android:textSize="14sp"
        android:textColor="#6F7075"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/age_title.iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/age_bannerlow.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/age_banner_low"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/age_btnlow.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/age_startbtn_low"
        android:layout_marginBottom="45dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@id/age_bannerlow.iv"
        app:layout_constraintStart_toStartOf="@id/age_bannerlow.iv"/>

    <ImageView
        android:id="@+id/age_bannermiddle.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/age_banner_middle"
        android:layout_marginTop="307dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/age_btnmiddle.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/age_startbtn_middle"
        android:layout_marginBottom="45dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@id/age_bannermiddle.iv"
        app:layout_constraintStart_toStartOf="@id/age_bannermiddle.iv"/>

    <ImageView
        android:id="@+id/age_bannerhigh.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/age_banner_high"
        android:layout_marginTop="490dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/age_btnhigh.iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/age_startbtn_high"
        android:layout_marginBottom="45dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@id/age_bannerhigh.iv"
        app:layout_constraintStart_toStartOf="@id/age_bannerhigh.iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>