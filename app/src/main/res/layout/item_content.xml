<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/content.tv"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fun_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/content.tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/section.iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/book_section"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/sub1.tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동화를 더 즐겨볼까요?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/section.iv"
            app:layout_constraintStart_toStartOf="@id/word_banner.iv"/>

        <TextView
            android:id="@+id/sub2.tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단어장도 만들고 퀴즈도 풀어보며 \n 동화를 색다르게 즐겨봐요 :)"
            android:textSize="16sp"
            android:textColor="#5C5D61"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/sub1.tv"
            app:layout_constraintStart_toStartOf="@id/sub1.tv"/>

        <ImageView
            android:id="@+id/word_banner.iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/book_word_banner"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sub2.tv"/>

        <TextView
            android:id="@+id/word_title.tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단어장을 만들자!"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="26dp"
            android:layout_marginStart="18dp"
            app:layout_constraintTop_toTopOf="@id/word_banner.iv"
            app:layout_constraintStart_toStartOf="@id/word_banner.iv"/>

        <TextView
            android:id="@+id/word_sub.iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내가 만든 동화에서 나오는 \n 단어를 오랬동안 간직해봐요!"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/word_title.tv"
            app:layout_constraintStart_toStartOf="@id/word_title.tv"/>

        <ImageView
            android:id="@+id/word_btn.iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/book_word_btn"
            android:layout_marginTop="25dp"
            android:layout_marginStart="21dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/word_sub.iv"/>

        <ImageView
            android:id="@+id/quiz_banner.iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/book_quiz_banner"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/word_banner.iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/quiz_title.tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="퀴즈 풀고 실력 UP!"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="26dp"
            android:layout_marginStart="18dp"
            app:layout_constraintTop_toTopOf="@id/quiz_banner.iv"
            app:layout_constraintStart_toStartOf="@id/quiz_banner.iv"/>

        <TextView
            android:id="@+id/quiz_sub.tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내가 만든 동화로 재밌는 \n 퀴즈를 풀어볼까요?"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/quiz_title.tv"
            app:layout_constraintStart_toStartOf="@id/quiz_title.tv"/>

        <ImageView
            android:id="@+id/quiz_btn.iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/book_quiz_btn"
            android:layout_marginTop="25dp"
            android:layout_marginStart="21dp"
            app:layout_constraintTop_toBottomOf="@id/quiz_sub.tv"
            app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>